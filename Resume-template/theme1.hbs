} */
.container{
    display: grid;
    grid-template-columns: 30% 70%;
    
    height: 95vh;
    

}
.left_container{
   
    padding:1rem;
    display: inherit;

    background-color: #E5F1FF;
    height: max-content;
    padding: 1rem 2rem;
    
}
.left_container>img{
    height: 150px;
    width: 150px;
    margin: 5px 10px;
    
    border-radius: 50%;
}
.right_container{
    padding:1rem;
    display: inherit;
    flex-wrap: wrap;
    flex-direction: column;
    height: inherit;
    padding: 1rem  5rem;
    background-color:#FFFFFF;
    
}

.contact>ul{
    display: flex;
    flex-direction: column;
    list-style-type:none;
}
.contact>ul>li{
    padding: 0.5rem 0;
}
.education{
    padding: 0.5rem 0 ;
}
.intro{
    padding: 0.5rem 0 ;
}
.experience{
    padding: 0.5rem 0 ;
    
}
.educationinfo{
    padding: 0.5rem 0;
}
.projects{
    padding: 0.5rem 0 ;
}
.skills{
    padding: 0.5rem 0 ;
   
}
.intrest{
    padding: 0.5rem 0 ;

}
.intrest>ul{
    list-style-type: none;
    display: flex;
    
}
.intrest>ul>li{
    padding: 1rem;
}
h2{
    color: #096ADD;
    font-size: 16px;
}
h1{
    color: #096ADD;
}
.educationinfo{
  padding: 1px 0px;
  margin: 1rem 0;
}
.educationinfo>span{
    font-size: 14px;
    color: #3d3d3d;
    padding: 0;
    
}
.educationinfo>p{
    margin: 0;
}

</style>

<html>
<body>
   <div class="container">
    <div class="left_container">
    <img src="{{profilepic}}" alt="">
    <div class="aboutme"> 
        <h2>
            About Me
        </h2>
        <p>{{description}}</p>
    </div>
    <div class="contact"> 
        <h2>Contact</h2>
        <ul>
            <li>{{addressid.state}}, {{addressid.city}}</li>
            <li>{{email}}</li>
            <li>{{mobileNumber}}</li>
            <li>{{gitHub}}</li>
        </ul>
    </div>
    <div class="education">
        <h2>Education</h2>
        {{#each usereducation as |edu| }}
        <div class="educationinfo">
            
            <span>{{edu.startDate}}-{{edu.endDate}}</span>
            <p>{{edu.course}}</p>
            <span>{{edu.student.name}}</span>
        </div>
        {{/each}}
    </div>
    </div>
    <div class="right_container">
        <div class="intro"><h1>{{firstName}} {{lastName}}</h1> </div>
        <div class="experience">
            <h2>Experience</h2>
            {{#each companys as |com|}}
            <div class="experienceinfo">
                <span> {{com.company.name}} - {{com.position}}</span>
                <section>
                    {{com.description}}
                </section>
            </div>
            {{/each}}
            
        </div>
        <div class="projects">
            <h2>Projects</h2>
            {{#each projects as |project|}}
            <h4>{{project.title}}</h4>
            <p>{{project.description}}</p>
            {{/each}}
        </div>
        <div class="skills">
            <h2>Skills</h2>
            <ul>
                {{#each skills as |skill|}}
                <li>{{skill.name}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="intrest">
            <h2>Intrest</h2>
            <ul>
                {{#each intrest as |item|}}
                <li>{{item}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
    


   </div>
</body>
</html>